            initial_version: u64,
            event: DomainEvent,
        ) {
            let initial = DomainAggregate {
                version: EventVersion(initial_version),
                // ...
            };
            
            let result = apply_event(Some(initial), &event);
            
            prop_assert!(result.version.0 > initial_version);
        }
    }
    
